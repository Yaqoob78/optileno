    "@testing-library/react-native": "^12.2.0",
    "@testing-library/jest-native": "^5.4.3",
    "react-test-renderer": "^18.2.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.76.8"
